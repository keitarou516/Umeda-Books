        <section class="form_title">
            <div class="rental_form">
            <div class="k-container review-container">
            <%= form_for [@book, @review] , html: { class: "contact-form", class: "a_row" } do |f| %>
                <div class="form-field col x-100 review-col">
                    <%= f.label :Name %>
                    <%= f.text_field :name, placeholder: 'Name', value: '' %>
                </div>
                <div class="form-field col x-100 rate-form">
                    <%= f.label :Rate %>
                    <%= f.number_field :rate, min: 0, max: 5, value: '5' %>
                </div>
                <div class="form-field col x-100 review-col">
                    <%= f.label :Title %>
                    <%= f.text_field :title, placeholder: 'Title', value: '' %>
                </div>
                <div class="form-field col x-100 review-col">
                    <%= f.label :Review, "Review (400 characters maximum)" %>
                    <%= f.text_area :text, placeholder: 'Review', value: '', class: "review_form" %>
                </div>
                <%= f.hidden_field :book_id, :value => @book.id %>
                <div class="rental_btn">
                    <div class="form-field col x-100 align-center">
                    <%= button_tag type: "submit", class: "submit-btn" do %>
                        Send<i class="icon-arrow-right"></i>
                    <% end %>
                </div>
            <% end %>
            </div>
        </section>
