        <section class="form_title">
            <div class="rental_form">
            <div class="k-container add-container">
            <%= form_for [@book] , html: { class: "contact-form", class: "a_row" } do |f| %>
                <div class="form-field col x-100 review-col">
                    <%= f.label :Title %>
                    <%= f.text_field :name, placeholder: 'Title', value: '' %>
                </div>
                <div class="form-field col x-100 rate-form">
                    <%= f.label :Image, "Image URL" %>
                    <%= f.text_field :image, placeholder: 'Image URL', value: '' %>
                </div>
                <div class="form-field col x-100 review-col">
                    <%= f.label :Author %>
                    <%= f.text_field :author, placeholder: 'Author', value: '' %>
                </div>
                <div class="rental_btn">
                    <div class="form-field col x-100 align-center">
                    <%= button_tag type: "submit", class: "submit-btn" do %>
                        Add<i class="icon-arrow-right"></i>
                    <% end %>
                </div>
            <% end %>
            </div>
        </section>